<VirtualHost *:80>
    ServerAdmin <%= @node[:packetflagon][:contact]%>
    DocumentRoot /var/www/<%= @node[:packetflagon][:fqdn]%>
    ServerName <%= @node[:packetflagon][:fqdn] %>
    ServerAlias www.<%= @node[:packetflagon][:fqdn] %>

    <Directory />
      Options FollowSymLinks
      AllowOverride All
    </Directory>
</VirtualHost>

